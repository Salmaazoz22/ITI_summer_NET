@using Resturant.BLL.ModelVM.User

@model CreateUser
<div class="card">
    <div class="card-header">
        Create User
    </div>
    <div class="card-body">
        <form asp-action="SaveUser" asp-controller="User">
         
            <div class="mb-3">
                <label for="Name" class="form-label">Name</label>
                <input type="text" asp-for="Name" class="form-control" />
               
<span class="text-danger" asp-validation-for="Name"> </span>
            </div>

            <div class="mb-3">
                <label for="Age" class="form-label">Age</label>
                <input type="number" asp-for="Age" class="form-control" />
                <span class="text-danger" asp-validation-for="Age"> </span>
            </div>
            <div class="mb-3">
                <label for="Age" class="form-label">Type</label>
                <select asp-for="Type" class="form-select" aria-label="Default select example">
             
                    <option value="@Restaurant.DAL.Enum.Type.Admin">Admin</option>
                    <option value="@Restaurant.DAL.Enum.Type.User" >User</option>
                </select>
                <span class="text-danger" asp-validation-for="Type"> </span>
            
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>